<body>
  <div class="container">
    <h1>BREAD (Browse, Read, Edit, Add, Delete)</h1>
    <section class="container__filter">

      <form action="" method="get">
        <div class="container__row">
          <div class="container__row__check">
            <input type="checkbox" name="stringCheck" id="stringCheck">
          </div>
          <div class="container__row__label">
            <label for="string">String</label>
          </div>
          <div class="container__row__input">
            <input id="stringinput" type="search" name="string" value="" placeholder="String">
          </div>
        </div>
        <div class="container__row">
          <div class="container__row__check">
            <input type="checkbox" name="integerCheck" id="integerCheck">
          </div>
          <div class="container__row__label">
            <label for="integer">Integer</label>
          </div>
          <div class="container__row__input">
            <input id="integerinput" type="number" name="integer" placeholder="Integer">
          </div>
        </div>
        <div class="container__row">
          <div class="container__row__check">
            <input type="checkbox" name="floatCheck" id="floatCheck">
          </div>
          <div class="container__row__label">
            <label for="float">Float</label>
          </div>
          <div class="container__row__input">
            <input id="floatinput" type="number" step="any" name="float" placeholder="Float">
          </div>
        </div>
        <div style="margin: 0px;" class="container__row">
          <div class="container__row__check">
            <input type="checkbox" name="dateCheck" id="dateCheck">
          </div>
          <div class="container__row__label">
            <label for="startdate">Date</label>
          </div>
          <div class="container__row__input">
            <input id="startdateinput" type="date" name="startdate" placeholder="start date">
          </div>
        </div>
        <div class="container__row">
          <div class="container__row__check">
            <div style="width: 20px;"></div>
          </div>
          <div class="container__row__label">
            <label for="date"></label>
          </div>
          <div class="container__row__input">
            <div>to</div>
            <input id="enddateinput" type="date" name="enddate" placeholder="end date">
          </div>
        </div>
        <div class="container__row">
          <div class="container__row__check">
            <input type="checkbox" name="booleanCheck" id="booleanCheck">
          </div>
          <div class="container__row__label">
            <label for="boolean">Boolean</label>
          </div>
          <div class="container__row__input">
            <select id="booleaninput" name="boolean" id="boolean">
              <option value="" disabled selected hidden>Choose the boolean ...</option>
              <option value="true">True</option>
              <option value="false">False</option>
            </select>
          </div>
        </div>
        <div class="container__row">
          <button type="submit" class="container__row__button button">Search</button>
        </div>
      </form>
    </section>

    <section class="container__table">

      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>String</th>
            <th>Integer</th>
            <th>Float</th>
            <th>Date</th>
            <th>Boolean</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% for( let i = pagination.offset; (i < pagination.offset + pagination.perPage) && (i < data.length); i++ ) { %>

          <tr>
            <td><%= i + 1 %> </td>
            <td><%= data[i] ? data[i].string : null %> </td>
            <td><%= data[i] ? data[i].integer : null %> </td>
            <td><%= data[i] ? data[i].float : null %> </td>
            <td><%= data[i] ? (data[i].date ? helper.viewDate(data[i].date) : "kosong") : null %> </td>
            <td><%= data[i] ? data[i].boolean : null %> </td>
            <td>
              <a href="/edit/<%= i %>">
                <button class="button edit">Edit</button>
              </a>
              <a href="/delete/<%= i %>">
                <button class="button delete">Delete</button>
              </a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <div class="pagination">
        <a href="/?page=<%= pagination.currentPage - 1 %>" style=<%= pagination.currentPage == 1 || !pagination.currentPage ? "pointer-events:none;" : "" %>>Previous</a>
        <% for( let i = 1; i < pagination.totalPage+1; i++ ) { %>
        <a href="/?page=<%= i %>" class="<%= pagination.currentPage == i ? "active" : "" %> "><%= i %></a>
        <% } %>
        <a href="/?page=<%= pagination.currentPage + 1 %>" style=<%= pagination.currentPage == 3 ? "pointer-events:none;" : "" %>>Next</a>
      </div>

      <a href="/add">
        <button class="button add">Add</button>
      </a>

    </section>
  </div>

