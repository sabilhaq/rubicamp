<%- include("../../partials/header") -%>
<%- include("../../partials/sidebar-style") -%>
</head>

<body style="overflow: hidden;">
  <%- include("../../partials/navbar") -%>

  <div class="container p-0" style="max-width: none;">
    <div class="d-flex" style="height: 100vh;">
      <%- include("../../partials/sidebar") -%>

      <div style="overflow: auto;" class="pt-3 tab-content w-100" id="v-pills-tabContent">
        <div class="container ps-0" style="max-width: none;">
          <h1>Issues</h1>
          <hr>

          <div style="max-width: 1200px;">
            <div class="filters-container">
              <h2>Filters</h2>

              <form id="form-filter-issues" action="" method="get" class="m-auto mb-3 px-3" style="max-width: 1200px;">
                <div class="row mb-3 align-items-center justify-content-between">
                  <div class="col-auto">
                    <input <%= queryParamObj.issueidcheck && "checked" %> type="checkbox" class="form-check-input" id="issueidcheck" name="issueidcheck">
                    <label class="form-check-label" for="issueidcheck">ID</label>
                  </div>
                  <div class="col-auto w-75">
                    <input value="<%= queryParamObj.issueid %>" type="text" id="issueid" name="issueid" class="form-control" placeholder="ID">
                  </div>
                </div>

                <div class="row mb-3 align-items-center justify-content-between">
                  <div class="col-auto">
                    <input <%= queryParamObj.subjectcheck && "checked" %> type="checkbox" class="form-check-input" id="subjectcheck" name="subjectcheck">
                    <label class="form-check-label" for="subjectcheck">Subject</label>
                  </div>
                  <div class="col-auto w-75">
                    <input value="<%= queryParamObj.subject %>" type="text" id="subject" name="subject" class="form-control" placeholder="Subject">
                  </div>
                </div>

                <div class="row mb-3 align-items-center justify-content-between">
                  <div class="col-auto">
                    <input <%= queryParamObj.trackercheck && "checked" %> type="checkbox" class="form-check-input" id="trackercheck" name="trackercheck">
                    <label class="form-check-label" for="trackercheck">Tracker</label>
                  </div>
                  <div class="col-auto w-75">
                    <select id="tracker" name="tracker" class="form-select" aria-label="Default select example">
                      <option value="" disabled selected hidden>Choose the tracker ...</option>
                      <option <%= queryParamObj.tracker == "bug" && "selected" %> value="bug">Bug</option>
                      <option <%= queryParamObj.tracker == "feature" && "selected" %> value="feature">Feature</option>
                      <option <%= queryParamObj.tracker == "support" && "selected" %> value="support">Support</option>
                    </select>
                  </div>
                </div>

                <button class="btn btn-primary" type="submit">Search</button>
              </form>
            </div>

            <div class="options-container">
              <h2>Options</h2>

              <form id="form-options-issues" action="/projects/<%= projectid %>/issues/option" method="POST" class="w-75 justify-content-between">
                <div class="row mb-3 justify-content-between" style="max-width: 310px;">
                  <div class="col-auto">
                    <p>Columns</p>
                  </div>

                  <div class="col-auto">
                    <div class="row mb-3 align-items-center justify-content-between">
                      <div class="col-auto">
                        <input type="checkbox" class="form-check-input" id="issueidcolumn" name="issueidcolumn" <%= config.issueidcolumn ? "checked" : "" %>>
                        <label class="form-check-label" for="issueidcolumn">ID</label>
                      </div>
                    </div>

                    <div class="row mb-3 align-items-center justify-content-between">
                      <div class="col-auto">
                        <input type="checkbox" class="form-check-input" id="subjectcolumn" name="subjectcolumn" <%= config.subjectcolumn ? "checked" : "" %>>
                        <label class=" form-check-label" for="subjectcolumn">Subject</label>
                      </div>
                    </div>

                    <div class="row mb-3 align-items-center justify-content-between">
                      <div class="col-auto">
                        <input type="checkbox" class="form-check-input" id="trackercolumn" name="trackercolumn" <%= config.trackercolumn ? "checked" : "" %>>
                        <label class=" form-check-label" for="trackercolumn">Tracker</label>
                      </div>
                    </div>
                  </div>
                </div>
                <button class="btn btn-primary" type="submit">Apply</button>
              </form>
            </div>

            <div class="table-container mt-3">
              <table id="table-issues-pms" class="table table-striped table-hover">
                <thead>
                  <tr>
                    <% if (config.issueidcolumn) { %>
                    <th>#</th>
                    <% } %>
                    <% if (config.subjectcolumn) { %>
                    <th>Subject</th>
                    <% } %>
                    <% if (config.trackercolumn) { %>
                    <th>Tracker</th>
                    <% } %>
                    <th>Actions</th>
                  </tr>
                </thead>

                <tbody>
                  <% for( let i = 0; i < data.length; i++ ) { %>

                  <tr>
                    <% if (config.issueidcolumn) { %>
                    <td>
                      <a href="/projects/issues/<%= data[i].issueid %>"><%= data[i].issueid %></a>
                    </td>
                    <% } %>
                    <% if (config.subjectcolumn) { %>
                    <td><%= data[i].subject %></td>
                    <% } %>
                    <% if (config.trackercolumn) { %>
                    <td><%= data[i].tracker && data[i].tracker[0].toUpperCase() + data[i].tracker.substring(1) %></td>
                    <% } %>

                    <td>
                      <a href="/projects/<%= projectid %>/issues/edit/<%= data[i].issueid %>" class="btn btn-success" role="button">Edit</a>
                      <a href="/projects/<%= projectid %>/issues/delete/<%= data[i].issueid %>" class="btn btn-danger btn-delete" role="button">Delete</a>
                    </td>
                  </tr>

                  <% } %>
                </tbody>
              </table>

              <nav aria-label="...">
                <ul id="pagination-pms" class="pagination">

                  <li class="page-item <%= pagination.currentPage == 1 || !pagination.currentPage ? "disabled" : "" %>">
                    <a href="<%= "/projects/" + projectid + "/issues" + queryPage + (pagination.currentPage-1) %>" class="page-link">Previous</a>
                  </li>
                  <% for (let i = 1; i <= pagination.totalPage; i++) { %>

                  <li class="page-item <%= pagination.currentPage == i ? "active" : "" %>" aria-current="page">
                    <a id="changepage" class="page-link" href="<%= "/projects/" + projectid + "/issues" + queryPage + i  %>"><%= i %></a>
                  </li>

                  <% } %>
                  <li class="page-item <%= pagination.currentPage == pagination.totalPage ? "disabled" : "" %>">
                    <a href="<%= "/projects/" + projectid + "/issues" + queryPage + (pagination.currentPage+1) %>" class="page-link">Next</a>
                  </li>

                </ul>
              </nav>

              <a href="/projects/<%= projectid %>/issues/add" class="btn btn-primary" style="display: inline-block; margin-bottom: 75px;" role="button">Add</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
<%- include("../../partials/footer") -%>