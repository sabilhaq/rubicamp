<%- include("../../partials/header") -%>

<%- include("../../partials/sidebar-style") -%>
</style>
</head>

<body style="overflow: hidden;">
  <%- include("../../partials/navbar") -%>

  <div class="container p-0" style="max-width: none;">
    <div class="d-flex" style="height: 100vh;">
      <%- include("../../partials/sidebar") -%>

      <div class="pt-3 tab-content w-100" id="v-pills-tabContent">
        <div class="tab-pane fade show active" id="v-pills-overview" role="tabpanel" aria-labelledby="v-pills-overview-tab">
          <div class="container ps-0" style="max-width: none;">
            <h1>Overview</h1>
            <hr>

            <div>
              <h2><%= projectName %></h2>
              <div class="issues-container border rounded p-3 mb-5">
                <p class="mb-0">Issue tracking</p>
                <ul>
                  <li>Bug: <%= openBugs.length %> Open / <%= allBugs.length %></li>
                  <li>Feature: <%= openFeatures.length %> Open / <%= allFeatures.length %></li>
                  <li>Support: <%= openSupports.length %> Open / <%= allSupports.length %></li>
                </ul>
              </div>

              <div class="members-container border rounded p-3">
                <p class="mb-0">Members</p>
                <ul>
                  <% for( let i = 0; i < memberList.length; i++ ) { %>
                  <li><%= memberList[i].firstname %></li>
                  <% } %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>
<%- include("../../partials/footer") -%>