<%- include("../../partials/header") -%>
<%- include("../../partials/sidebar-style") -%>
</head>

<body style="overflow: hidden;">
  <%- include("../../partials/navbar") -%>

  <div class="container p-0" style="max-width: none;">
    <div class="d-flex" style="height: 100vh;">
      <%- include("../../partials/sidebar") -%>

      <div style="overflow: auto;" class="pt-3 tab-content w-100" id="v-pills-tabContent">
        <div class="tab-pane fade show active" id="v-pills-members" role="tabpanel" aria-labelledby="v-pills-members-tab">
          <div class="container ps-0" style="max-width: none;">
            <h1>Members</h1>
            <hr>

            <div style="max-width: 1200px;">
              <div class="filters-container">
                <h2>Filters</h2>

                <form id="form-filter-members" action="" method="get" class="m-auto mb-3 px-3" style="max-width: 1200px;">
                  <input type="hidden" value="1" id="page" name="page" class="form-control">

                  <div class="row mb-3 align-items-center justify-content-between">
                    <div class="col-auto">
                      <input <%= queryParamObj.useridcheck && "checked" %> type="checkbox" class="form-check-input" id="useridcheck" name="useridcheck">
                      <label class="form-check-label" for="useridcheck">ID</label>
                    </div>
                    <div class="col-auto w-75">
                      <input value="<%= queryParamObj.userid %>" type="text" id="userid" name="userid" class="form-control" placeholder="ID">
                    </div>
                  </div>

                  <div class="row mb-3 align-items-center justify-content-between">
                    <div class="col-auto">
                      <input <%= queryParamObj.firstnamecheck && "checked" %> type="checkbox" class="form-check-input" id="firstnamecheck" name="firstnamecheck">
                      <label class="form-check-label" for="firstnamecheck">Name</label>
                    </div>
                    <div class="col-auto w-75">
                      <input value="<%= queryParamObj.firstname %>" type="text" id="firstname" name="firstname" class="form-control" placeholder="Name">
                    </div>
                  </div>

                  <div class="row mb-3 align-items-center justify-content-between">
                    <div class="col-auto">
                      <input <%= queryParamObj.positioncheck && "checked" %> type="checkbox" class="form-check-input" id="positioncheck" name="positioncheck">
                      <label class="form-check-label" for="positioncheck">Position</label>
                    </div>
                    <div class="col-auto w-75">
                      <select id="position" name="position" class="form-select" aria-label="Default select example">
                        <option value="" disabled selected hidden>Choose the position ...</option>
                        <option <%= queryParamObj.position == "Manager"  && "selected" %> value="Manager">Manager</option>
                        <option <%= queryParamObj.position == "Programmer"  && "selected" %> value="Programmer">Programmer</option>
                        <option <%= queryParamObj.position == "Quality Assurance"  && "selected" %> value="Quality Assurance">Quality Assurance</option>
                      </select>
                    </div>
                  </div>

                  <button class="btn btn-primary" type="submit">Search</button>
                </form>
              </div>

              <div class="options-container">
                <h2>Options</h2>

                <form id="form-options-members" action="/projects/<%= projectid %> /members/option" method="POST" class="w-75 justify-content-between">
                  <div class="row mb-3 justify-content-between" style="max-width: 310px;">
                    <div class="col-auto">
                      <p>Columns</p>
                    </div>

                    <div class="col-auto">
                      <div class="row mb-3 align-items-center justify-content-between">
                        <div class="col-auto">
                          <input type="checkbox" class="form-check-input" id="useridcolumn" name="useridcolumn" <%= config.useridcolumn ? "checked" : "" %>>
                          <label class="form-check-label" for="useridcolumn">ID</label>
                        </div>
                      </div>

                      <div class="row mb-3 align-items-center justify-content-between">
                        <div class="col-auto">
                          <input type="checkbox" class="form-check-input" id="firstnamecolumn" name="firstnamecolumn" <%= config.firstnamecolumn ? "checked" : "" %>>
                          <label class=" form-check-label" for="firstnamecolumn">Name</label>
                        </div>
                      </div>

                      <div class="row mb-3 align-items-center justify-content-between">
                        <div class="col-auto">
                          <input type="checkbox" class="form-check-input" id="positioncolumn" name="positioncolumn" <%= config.positioncolumn ? "checked" : "" %>>
                          <label class=" form-check-label" for="positioncolumn">Position</label>
                        </div>
                      </div>
                    </div>
                  </div>
                  <button class="btn btn-primary" type="submit">Apply</button>
                </form>
              </div>

              <div class="table-container mt-3">
                <table id="table-members-pms" class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <% if (config.useridcolumn) { %>
                      <th>#</th>
                      <% } %>
                      <% if (config.firstnamecolumn) { %>
                      <th>Name</th>
                      <% } %>
                      <% if (config.positioncolumn) { %>
                      <th>Position</th>
                      <% } %>
                      <th>Actions</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% for( let i = 0; i < data.length; i++ ) { %>

                    <tr>
                      <% if (config.useridcolumn) { %>
                      <td>
                        <a href="/projects/members/<%= data[i].userid %>"><%= data[i].userid %></a>
                      </td>
                      <% } %>
                      <% if (config.firstnamecolumn) { %>
                      <td><%= data[i].firstname %></td>
                      <% } %>
                      <% if (config.positioncolumn) { %>
                      <td><%= data[i].role %></td>
                      <% } %>

                      <td>
                        <a href="/projects/<%= projectid %>/members/edit/<%= data[i].userid %>" class="btn btn-success" role="button">Edit</a>
                        <a href="/projects/<%= projectid %>/members/delete/<%= data[i].userid %>" class="btn btn-danger btn-delete" role="button">Delete</a>
                      </td>
                    </tr>

                    <% } %>
                  </tbody>
                </table>

                <nav aria-label="...">
                  <ul id="pagination-pms" class="pagination">

                    <li class="page-item <%= pagination.currentPage == 1 || !pagination.currentPage ? "disabled" : "" %>">
                      <a href="<%= "/projects/" + projectid + "/members" + queryPage + (pagination.currentPage-1) %>" class="page-link">Previous</a>
                    </li>
                    <% for (let i = 1; i <= pagination.totalPage; i++) { %>

                    <li class="page-item <%= pagination.currentPage == i ? "active" : "" %>" aria-current="page">
                      <a id="changepage" class="page-link" href="<%= "/projects/" + projectid + "/members" + queryPage + i  %>"><%= i %></a>
                    </li>

                    <% } %>
                    <li class="page-item <%= pagination.currentPage == pagination.totalPage ? "disabled" : "" %>">
                      <a href="<%= "/projects/" + projectid + "/members" + queryPage + (pagination.currentPage+1) %>" class="page-link">Next</a>
                    </li>

                  </ul>
                </nav>

                <a href="/projects/<%= projectid %>/members/add" class="btn btn-primary" style="display: inline-block; margin-bottom: 100px;" role="button">Add</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>
<%- include("../../partials/footer") -%>