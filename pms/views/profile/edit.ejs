<%- include("../partials/header") -%>
</head>

<body>
  <%- include("../partials/navbar") -%>

  <div class="container">
    <h1>Profile</h1>
    <hr>

    <div class="container">
      <form id="form-edit" action="" method="POST" class="m-auto" style="max-width: 650px;">
        <div class="row mb-3 align-items-center justify-content-between">
          <div class="col-auto">
            <label class="form-check-label" for="_id">Email</label>
          </div>
          <div class="col-auto w-75">
            <input type="email" id="_id" class="form-control" placeholder="Email" disabled>
          </div>
        </div>

        <div class="row mb-3 align-items-center justify-content-between">
          <div class="col-auto">
            <label class="form-check-label" for="password">Password</label>
          </div>
          <div class="col-auto w-75">
            <input type="password" id="password" class="form-control" placeholder="Password">
          </div>
        </div>

        <div class="row mb-3 align-items-center justify-content-between">
          <div class="col-auto">
            <label class="form-check-label" for="position">Position</label>
          </div>
          <div class="col-auto w-75">
            <!-- <input type="password" id="name" class="form-control" placeholder="Password"> -->
            <div class="form-check">
              <input class="form-check-input" type="radio" name="position" id="manager" value="manager" checked>
              <label class="form-check-label" for="manager">
                Manager
              </label>
            </div>

            <div class="form-check">
              <input class="form-check-input" type="radio" name="position" id="softwaredev" value="softwaredev">
              <label class="form-check-label" for="softwaredev">
                Software Developer
              </label>
            </div>

            <div class="form-check">
              <input class="form-check-input" type="radio" name="position" id="qualityassurance" value="qualityassurance" disabled>
              <label class="form-check-label" for="qualityassurance">
                Quality Assurance
              </label>
            </div>

          </div>
        </div>

        <div class="row mb-3 align-items-center justify-content-between">
          <div class="col-auto">
            <label class="form-check-label" for="type">Type</label>
          </div>
          <div class="col-auto w-75">
            <!-- <input type="password" id="name" class="form-control" placeholder="Password"> -->
            <input type="checkbox" class="form-check-input" id="type">
            <label class="form-check-label" for="type">Fulltime</label>
          </div>
        </div>

        <button class="btn btn-primary" type="submit">Update</button>
      </form>
    </div>
  </div>
</body>

<%- include("../partials/footer") -%>